- title @user.name.humanize

- if can? :edit, @user
	%p
		%strong E-mail:
		= @user.email
	%p
		= link_to "Edit profile", edit_user_path(@user), :class => [:btn, :primary]

%h2= "Recent comments"

- for comment in @user.comments.order("created_at desc").limit(10)
	.comment
		%strong="#{comment.post.title}, "
		="#{time_ago_in_words comment.created_at} ago"
		%p
			= comment.content