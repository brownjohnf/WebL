- title "Comments"

%table
  %tr
    %th User
    %th Post
    %th Content
  - for comment in @comments
    %tr
      %td= comment.user_id
      %td= comment.post_id
      %td= comment.content
      %td= link_to 'Show', post_comment_path(@post,comment)
      %td= link_to 'Edit', edit_post_comment_path(@post,comment)
      %td= link_to 'Destroy', post_comment_path(@post,comment), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Comment", new_post_comment_path
