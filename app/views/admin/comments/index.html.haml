-title "Recent Comments"

%table
	%tr
		%th User
		%th Post
	-for comment in @comments
		%tr
			%td= link_to comment.user.name, admin_user_path(comment.user)
			%td= link_to comment.post.title, post_path(comment.post)
		%tr
			%td{:colspan => 2}= comment.content
		%tr
			%td{:colspan => 2}
				= link_to "edit", edit_admin_comment_path(comment)
				|
				= link_to "destroy",  admin_comment_path(comment), :method => :delete, :confirmation => "Are you sure you want to delete this comment?"
