- title "Edit comment"

= form_for [:admin, @comment] do |f|
	%table.form
		%tr
			%td{colspan:2}
				= f.error_messages
		%tr
			%td= f.label :content
			%td= f.text_area :content
		%tr
			%td= f.label :user
			%td= collection_select(:comment, :user_id, User.all, :id, :name, {:prompt => false})
		%tr
			%td= f.label :post
			%td= collection_select(:comment, :post_id, Post.all, :id, :title, {:prompt => false})
		%tr
			%td
			%td= f.submit