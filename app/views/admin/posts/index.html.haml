- title "Posts"

%table
	%thead
		%tr
			%th Title
			%th Content
			%th Publication Date
			%th Published
			%th Author
			%th
			%th
			%th
	%tbody
		- @posts.each do |post|
			%tr
				%td= post.title 
				%td= truncate post.content, :separator => ' ', :length => 50
				%td= post.publication_date 
				%td= post.published 
				%td= post.user.name.humanize 
				%td= link_to "Show", post 
				%td
					-if can? :edit, post
						= link_to "Edit", edit_post_path(post) 
				%td
					-if can? :destroy, post
						= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete

=will_paginate @posts

%p= link_to "New Post", new_post_path
