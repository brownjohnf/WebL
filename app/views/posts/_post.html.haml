-# Contained in a span12
.post
	%h1= post.title
	%small
		= "&mdash;".html_safe + " " + link_to("#{post.user.name.humanize}", user_path(post.user))
		= " | #{time_ago_in_words post.publication_date} ago"
		- if can? :edit, post
			%span.subheading
				|
				= link_to "Edit", edit_post_path(post)
		- if can? :destroy, post
			%span.subheading
				|
				= link_to "Remove", post_path(post), :method => :delete, :confirmation => "Are you sure you want to destroy this post?"

	%hr
		=markdown post.content