- title "Posts", false

- for post in @posts
	.post
		.row
			= render :partial => 'post_header', :locals => {:post => post}

		.row
			.span11.offset1
				= markdown(truncate(post.content, :length => 1000, :separator => ' ')).html_safe
				= link_to("Read more", post)
				= " (#{post.comments.count} comments)"

=will_paginate @posts