- title "Posts"

%table
	%tr
		%th Title
		%th Content
		%th Publication Date
		%th Published
		%th User
	- for post in @posts 
		%tr
			%td= post.title 
			%td= post.content 
			%td= post.publication_date 
			%td= post.published 
			%td= post.user_id 
			%td= link_to "Show", post 
			%td= link_to "Edit", edit_post_path(post) 
			%td= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete 


%p= link_to "New Post", new_post_path
