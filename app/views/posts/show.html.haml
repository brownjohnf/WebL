- title @post.title, false

.post= render @post, :locals => {:post => @post}

- if can? :read, Comment
	- unless @post.comments.empty?
		%h1 Comments:
		- for comment in @comments do
			=render comment
		=will_paginate @comments

- if can? :create, Comment
	- unless @post.comments_disabled
		.row
			.span1
				= gravatar_image_tag(current_user.email, :class => :gravatar, :gravatar => {:size => 50})
			.span9
				%strong New Comment:
				= render 'comments/form'
- else
	.row
		.span9.offset1
			= "Please #{link_to "sign in", sign_in_path} to comment"
