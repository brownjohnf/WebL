- title "Post"

%p
	%strong Title:
	= @post.title 

%p
	%strong Content:
	= @post.content 

%p
	%strong Publication Date:
	= @post.publication_date 

%p
	%strong Published:
	= @post.published 

%p
	%strong User:
	= @post.user_id 


%p
	= link_to "Edit", edit_post_path(@post) 
	| 
	= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete 
	| 
	= link_to "View All", posts_path 