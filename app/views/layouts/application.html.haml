!!!
%html

	%head
		%title
			WebL
			= " | #{yield(:title)}" unless yield(:title).blank?
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
		= stylesheet_link_tag :application
		= javascript_include_tag :application
		= csrf_meta_tag
		= yield(:head)

	%body
		.container
			= render :partial => 'layouts/menu'
			
			.row
				.span12
					- flash.each do |name, msg|
						= flash_div(name, msg)
				
					- if show_title?
						%h1= yield(:title)

					= yield
					
				.span4
					= yield(:sidebar)
			
			.row
				.span16
					= debug params